{
    "compilerOptions": {
        "target": "es2016",
        "typeRoots": ["./node_modules/@types", "./types"],  // Yangi o'zgartirilgan
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src/",
        "paths": {
            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@errors": [
                "./src/errors/index.ts"
            ],
            "@utils": [
                "./src/utils/"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        // "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./dist"
    ]
}
